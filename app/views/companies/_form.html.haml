- if @company.errors.any?
  #error_explanation
    %h2= "Please correct the following #{pluralize(@company.errors.count, "error")}:"
    %ul
      - @company.errors.full_messages.each do |msg|
        %li= msg

= form_for @company do |f|
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Create Company'
