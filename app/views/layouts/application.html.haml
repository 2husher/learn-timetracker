!!! 5
%html
  %head
    %title Timetracker
    %meta{:name =>"viewport", :content=>"width=devise-width, initial-scale=1"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #container
      %header
        = link_to content_tag('canvas', 'Time Tracker', id: 'logocanvas'), root_path
        = content_tag('canvas', 'Clock', id: 'clock', width: "300", height: "300")
        %nav
          = render 'shared/display_nav_items'
      %section#main
        %article
          - [:notice, :alert].each do |level|
            -if flash[level]
              .flash{:class=>level}= flash[level]
          = yield
        %aside
          = render 'shared/user_logged_in'
          - if content_for?(:aside)
            = yield :aside
          - else
            = sidebar
      %footer
        Time Tracker is a <em>Sample Company</em> App
