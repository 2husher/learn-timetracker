%h1= @project.name

%p= "Company: #{@project.company.name}"
%p= "Default Rate: #{@project.default_rate}"
%p= "Slug: #{@project.slug}"

%table
  %tbody
    %tr
      %th View
      %th User
      %th Project
      %th Date/Time
      %th Hours
    - @project.works.each do |work|
      %tr
        %td= link_to 'View', work
        %td= work.user
        %td= link_to work.project, work.project
        %td= work.datetimeperformed.strftime('%m/%d/%Y %H:%M')
        %td= work.hours

= content_for :aside do
  = render 'sidebar'        