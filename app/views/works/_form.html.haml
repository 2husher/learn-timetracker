= form_for @work do |f|
  - if @work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work.errors.count, "error")} prohibited this work from being saved:"
      %ul
        - @work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :datetimeperformed
    = f.datetime_select :datetimeperformed
  .field
    = f.label :hours
    = f.text_field :hours
  .actions
    = f.submit 'Save'
